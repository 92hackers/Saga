{{!< default}}
<header id="header" class="animated fadeIn"{{#if @blog.cover}} style="background-image: url({{@blog.cover}})"{{/if}}>
    <div class="header-background">
    <section class="blog-content">
        <a id="site-url" class="blog-title" href="{{@blog.url}}">{{@blog.title}}</a>
        <span class="blog-description">{{@blog.description}}</span>
        {{> links}}
    </section>
    <section class="header-content">
        <h1 class="post-title animated fadeInUp">{{tag.name}}</h1>
    </section>
    </div>
</header>
<main id="main" class="archive">
    {{> loop}}
</main>